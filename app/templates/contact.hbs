<h1>Contact</h1>

<p>Don't miss our launch date, request an invitation now.</p>

{{#if responseMessage}}
    <div class="alert alert-success">{{responseMessage}}</div>
{{/if}}

<div class="form-horizontal form-group form-group-lg">
    <div class="row">
        <div class="col-xs-12 col-md-6">
            {{input type="email" value=model.email class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
            <br />
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-md-6">
            {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" value=model.message}}
            <br />
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-md-6">
            <button class="btn btn-primary btn-lg btn-block" disabled={{buttonIsDisabled}} {{action 'saveMessage' model}}>Send Message</button>
        </div>
    </div>
</div>


